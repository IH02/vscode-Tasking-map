{
  "name": "tasking-map-viewer",
  "displayName": "TASKING Map File Viewer",
  "description": "Viewer for TASKING VX-toolset linker map files",
  "publisher": "IH02",
  "icon": "images/icon.png",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/IH02/vscode-Tasking-map.git"
  },
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp",
    "onCommand:taskingMap.goToSymbol",
    "onCommand:taskingMap.selectMapFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tasking-map",
        "aliases": [
          "TASKING Map",
          "tasking-map"
        ],
        "extensions": [
          ".map",
          ".xmap"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tasking-map",
        "scopeName": "source.tasking-map",
        "path": "./syntaxes/tasking-map.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "taskingMap.goToSymbol",
        "title": "Map File Viewer: Go to Symbol in MAP"
      },
      {
        "command": "taskingMap.selectMapFile",
        "title": "Map File Viewer: Select MAP File"
      }
    ],
    "keybindings": [
      {
        "command": "taskingMap.selectMapFile",
        "key": "ctrl+alt+m",
        "when": "!config.taskingMap.highlightOnly"
      }
    ],
    "configuration": {
      "title": "TASKING Map Viewer",
      "properties": {
        "taskingMap.highlightOnly": {
          "type": "boolean",
          "default": false,
          "description": "Enable highlight-only mode (disable parser-based features)."
        }
      }
    },
    "views": {},
    "menus": {
      "commandPalette": [
        {
          "command": "taskingMap.goToSymbol",
          "when": "!config.taskingMap.highlightOnly"
        },
        {
          "command": "taskingMap.selectMapFile",
          "when": "!config.taskingMap.highlightOnly"
        }
      ],
      "editor/context": [
        {
          "command": "taskingMap.goToSymbol",
          "group": "navigation@1",
          "when": "!config.taskingMap.highlightOnly && editorTextFocus && (editorLangId == c || editorLangId == cpp)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}
